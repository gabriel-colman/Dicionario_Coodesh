{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": [
    "*.ts",
    "routes/**/*.ts",
    "services/**/*.ts",
    "middlewares/**/*.ts",
    "models/**/*.ts",
    "types/express.d.ts"
  ],
  "exclude": ["node_modules"]
}
